let

-- Functions

id = x -> x,
compose = f -> g -> x -> f (g x),
flip = f -> x -> y -> f y x,

-- Numbers
-- builtin: add, mul, sub, div, mod, sqrt

succ = add 1,
pred = (flip sub) 1,

-- Booleans

if = cond -> t -> f -> [ 1 -> t, 0 -> f ] cond,

and = a -> b -> if a b 0,
or = a -> b -> if a 1 b,
not = [ 0 -> 1, 1 -> 0 ],

-- Comparisons
-- builtin: eq, lt

neq = a -> b -> not (eq a b),
gte = a -> b -> not (lt a b),
gt = a -> b -> not (lte a b),
lte = a -> b -> or (lt a b) (eq a b),

-- Lists

cons = h -> t -> (h,t),

length = [
	() -> 0,
	(h,t) -> succ (length t)
],

head = (h,t) -> h,
tail = (h,t) -> t,

empty = [ () -> 1, l -> 0 ],

equal = [
	() -> [ () -> 1, l -> 0 ],
	(a,as) -> [ (b,bs) -> and (eq a b) (equal as bs), () -> 0]
],

concat = [
	() -> v -> v,
	(h,t) -> v -> (h, concat t v)
],

reverse = [
	() -> (),
	(h,t) -> concat (reverse t) (h,())
],

map = f -> [
	() -> (),
	(h,t) -> (f h, map f t)
],

filter = f -> [
	() -> (),
	(h,t) -> if (f h) (h, filter f t) (filter f t)
],

foldr = f -> acc -> [
	() -> acc,
	(h,t) -> f h (foldr f acc t)
],

foldl = f -> acc -> [
	() -> acc,
	(h,t) -> foldl f (f acc h) t
],

sum = foldr add 0,
product = foldr mul 1,

orList = foldr or 0,
andList = foldr and 1,

any = f -> l -> orList (map f l),
all = f -> l -> andList (map f l),
none = f -> l -> not (any f l),

zipWith = f -> [
	()		-> b -> (),
	(a,as)	-> [
		()		-> (),
		(b,bs)	-> (f a b, zipWith f as bs)
	]
],

zip = zipWith cons,

take = [
	0 -> l -> (),
	n -> [
		() -> (),
		(h,t) -> (h, (take (pred n) t))
	]
],

drop = [
	0 -> l -> l,
	n -> [
		() -> (),
		(h,t) -> drop (pred n) t
	]
],

range = a -> b ->
	if (lte a b)
		(a, range (succ a) b)
		(),

-- Infinite lists

downfrom = n -> (n, downfrom (pred 1)),
upfrom = n -> (n, upfrom (succ n)),
repeat = x -> (x, repeat x)

in